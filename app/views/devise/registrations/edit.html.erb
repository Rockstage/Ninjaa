<%= content_for :heading_left do %>
  <li><%= link_to "Job Board", jobs_path %></li>
  <li><%= link_to "Post Job", new_job_path %></li>
  <li><%= link_to "Something", "#" %></li>
<% end %>

<div class="container">

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

  <div role="form" class="form-signin">
    
    <h4 class="text-center">Re-chose your path</h4>
      <div class="form-group">
          <%= f.input :role, label: 'Are you a Sensei (Job giver)?', inline_label: 'Yes', as: :radio_buttons %>
      </div>
      <hr />
  
      <div class="form-group">
        <%= f.input :profile_name, input_html: { class: 'form-control' }, placeholder: 'ninjaa name', disabled: true %>
    </div>
    <div class="form-group">
        <%= f.input :email, input_html: { class: 'form-control' }, placeholder: 'you@example.com' %>
    </div>
    <div class="form-group">
      
      <%= f.input :birthday, as: :date, start_year: Date.today.year - 12,
                           end_year: Date.today.year - 90, order: [:day, :month, :year], input_html: {  } %>
           
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
           
      </div>
        <div class="form-group">
          <%= f.input :password, hint: "Leave blank if you do not want to change it", input_html: { class: 'form-control', autocomplete: 'off', value: "" } %>
      </div>
        <div class="form-group">
          <%= f.input :password_confirmation, :required => true, input_html: { class: 'form-control' } %>
      </div>
      <div class="form-group">
      <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, input_html: { class: 'form-control' } %>
      </div>
      <div class="form-actions">
          <%= f.button :submit, "Update", class: 'btn btn-primary btn-large btn-block' %>
      </div>
      
      <hr />
        <h4 class="gray">Cancel my account</h4>

        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

        <%= link_to "Back", :back %>
    </div>

  <% end %>



</div>